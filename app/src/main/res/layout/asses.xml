<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supervisor.Asses">


    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_above="@id/bottomNav"
        android:layout_marginBottom="10dp"

        android:layout_height="wrap_content">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueBlack"
            app:elevation="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="7dp"
                    android:text="SMART TERMINAL"
                    android:textColor="@color/green"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>


        </com.google.android.material.appbar.MaterialToolbar>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/canoFlower"
            android:elevation="10dp"
            android:padding="20dp"
            app:cardCornerRadius="15dp">


            <RelativeLayout
                android:id="@+id/InsidecardRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_asess_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/canoFlower"
                    android:gravity="center"
                    android:text="@string/assessment_details"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_asess_employee">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/relativeLayoutWordkId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            tools:layout_editor_absoluteY="16dp">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/wid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                app:counterEnabled="true"
                                app:counterMaxLength="7"
                                app:counterOverflowTextColor="@android:color/holo_red_dark">

                                <EditText
                                    android:id="@+id/editText_workid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_editext_background"
                                    android:gravity="center"
                                    android:hint="WORK ID"
                                    android:inputType="number"
                                    android:maxLength="7"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    tools:layout_editor_absoluteY="122dp" />


                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/wid"

                                android:layout_centerInParent="true"
                                android:textAlignment="center"
                                app:cursorColor="@android:color/white">

                                <EditText
                                    android:id="@+id/editText_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="109dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/rounded_editext_background"
                                    android:fontFamily="@an"
                                    android:gravity="center"
                                    android:hint="Details"

                                    android:maxLength="100"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    tools:layout_editor_absoluteY="181dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutDisplayPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/relativeLayoutWordkId"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            tools:layout_editor_absoluteY="283dp">

                            <!--   <TextView
                                android:id="@+id/offence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:hint="Points"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:layout_editor_absoluteY="274dp"></TextView>
                    -->
                            <TextView
                                android:id="@+id/points_displayTV"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:visibility="invisible"></TextView>

                            <Button
                                android:id="@+id/points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="SELECT DEDUCTIBLE POINTS"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@drawable/style"

                                android:visibility="visible" />                         <!--<Spinner
                                android:id="@+id/select_points_spinner"
                                android:layout_width="70dp"
                                android:layout_height="37dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"

                                android:layout_toRightOf="@id/points">

                            </Spinner> -->
                            <LinearLayout
                                android:id="@+id/RelativeLayoutButtons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/FivePoints"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:backgroundTint="@color/blueBlack"
                                    android:text="5"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />


                                <Button
                                    android:id="@+id/TenPoints"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:backgroundTint="@color/blueBlack"
                                    android:text="@string/_10"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:visibility="invisible"
                                    tools:ignore="SmallSp" />

                                <Button
                                    android:id="@+id/TwentyPoints"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:backgroundTint="@color/blueBlack"
                                    android:text="20"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />

                                <Button
                                    android:id="@+id/ThirtyPoints"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:backgroundTint="@color/blueBlack"
                                    android:text="30"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />

                            </LinearLayout>


                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewStation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativeLayoutDisplayPoints"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/blueBlack"
                            android:elevation="10dp"
                            android:padding="20dp"
                            app:cardCornerRadius="15dp">>


                            <RelativeLayout
                                android:id="@+id/realtiveLayouShift"
                                android:layout_width="match_parent"
                                android:layout_height="118dp"
                                android:layout_below="@id/relativeLayoutDisplayPoints"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal"
                                tools:layout_editor_absoluteY="335dp">

                                <TextView
                                    android:id="@+id/shift"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dp"
                                    android:hint="shift"
                                    android:textSize="20sp"
                                    android:text="shift:"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    tools:layout_editor_absoluteX="163dp"
                                    tools:layout_editor_absoluteY="451dp"></TextView>


                                <Spinner
                                    android:id="@+id/select_shift"
                                    android:layout_width="48dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/shift"></Spinner>


                                <TextView
                                    android:id="@+id/station"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="station:"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"></TextView>

                                <Spinner
                                    android:id="@+id/station_spinner"
                                    android:layout_width="60dp"
                                    android:layout_height="37dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="14dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/station"></Spinner>

                                <TextView
                                    android:id="@+id/assessed_by"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="10dp"
                                    android:text="supervisor"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    tools:layout_editor_absoluteX="163dp"
                                    tools:layout_editor_absoluteY="451dp"></TextView>


                                <TextView
                                    android:id="@+id/DisplayStation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="19dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/white"

                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/Display_assessor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="20dp"

                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/Display_selected_shift"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@id/DisplayStation"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:hint="shift"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"></TextView>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/linear_layout6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cardViewStation"

                            android:layout_centerInParent="true"
                            android:layout_marginBottom="60dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textview_employee_consent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="Employee Consent"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardImage"
                                android:layout_width="237dp"
                                android:layout_height="200dp"
                                android:layout_below="@id/textview_employee_consent"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:elevation="10dp"
                                app:cardCornerRadius="8dp">


                                <ImageView
                                    android:id="@+id/imageView_employee_consent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/baseline_add_photo_alternate_24"></ImageView>


                            </androidx.cardview.widget.CardView>


                            <Button
                                android:id="@+id/textViewUpload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cardImage"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"

                                android:background="@drawable/style"
                                android:text="Upload Assessment"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:visibility="invisible"/>
                            <Button
                                android:id="@+id/textview_review_assesment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cardImage"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"

                                android:background="@drawable/style"
                                android:text="Start Assessment"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/Terms_Conditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear_layout6"
                            android:layout_marginBottom="30dp"
                            android:background="@color/canoFlower">

                            <TextView
                                android:id="@+id/contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="10dp"
                                android:autoLink="phone"
                                android:text="AcodeDevelopers \n Contact: 0758536280"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="italic"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/contact"
                                android:layout_centerHorizontal="true"
                                android:text="C o d i n g  L  i f e"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="italic"></TextView>


                        </RelativeLayout>


                    </RelativeLayout>
                </ScrollView>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/bottomNav"
        android:layout_height="60dp"
        android:background="@color/blueBlack"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/InsideBottomNavrelativeLayout"
            android:layout_width="match_parent"

            android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/ImageBtnAccount"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:background="@color/blueBlack"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/baseline_supervisor_account_24">

                </ImageButton>
            <ImageButton
                android:id="@+id/ImageButtonHome"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:background="@color/blueBlack"
                android:layout_alignParentBottom="true"
                android:src="@drawable/baseline_home_24">

            </ImageButton>
            <ImageButton
                android:id="@+id/imageButtonAssessHistory"
                android:layout_width="60dp"
                android:layout_height="match_parent"
android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_alignParentTop="true"
                android:background="@color/blueBlack"
                android:layout_alignParentBottom="true"
                android:src="@drawable/baseline_library_add_check_24"

></ImageButton>



        </RelativeLayout>



    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>

